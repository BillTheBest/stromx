  foreach(__STROMXLIB ${stromx_LIB_COMPONENTS})
      set(stromx_LIBS ${stromx_LIBS} debug ${__STROMXLIB}.lib optimized ${__STROMXLIB}.lib)
  endforeach()
else()
  foreach(__STROMXLIB ${stromx_LIB_COMPONENTS})
    set(stromx_LIBS ${stromx_LIBS} ${__STROMXLIB})
