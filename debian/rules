#!/usr/bin/make -f

DEB_CMAKE_EXTRA_FLAGS = \
	-DPYTHON_INSTALL_DIR=lib/python2.7/dist-packages \
	-DDOC_INSTALL_DIR=share/doc

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/cmake.mk

build/stromx::
	cd $(DEB_BUILDDIR) && env LD_LIBRARY_PATH=`pwd`/stromx/runtime:`pwd`/stromx/example:`pwd`/stromx/cvimgutil:`pwd`/stromx/cvcore:`pwd`/stromx/cvimgproc PYTHONPATH=`pwd`/python $(MAKE) test ARGS="-V"

build/stromx-doc::
	cd $(DEB_BUILDDIR) && $(MAKE) doc
